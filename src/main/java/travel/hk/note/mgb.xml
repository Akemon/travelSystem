<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>


    <context id="DB2Tables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/db_travel_system"
                        userId="root"
                        password="">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--指定java bean 生成的位置-->
        <javaModelGenerator targetPackage="travel.hk.note.bean" targetProject="src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>
        <!--指定Mapper生成的位置-->
        <sqlMapGenerator targetPackage="travel.hk.note.mapper"  targetProject="src\main\java">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>
        <!--指定dao接口 生成的位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="travel.hk.note.mapper"  targetProject="src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table tableName="tb_travel_note" domainObjectName="Note"></table>
        <table tableName="tb_travel_note_collection" domainObjectName="Collection"></table>
        <table tableName="tb_travel_note_comment" domainObjectName="Comment"></table>
        <table tableName="tb_travel_note_content" domainObjectName="Content"></table>
    </context>
</generatorConfiguration>
